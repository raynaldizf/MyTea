<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.home.tea.TeaFragment"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@drawable/background_tea_susu"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:layout_marginTop="60dp"
                android:src="@drawable/tea_background" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/btnBack"
                            android:layout_marginBottom="20dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/line"
                            />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tea is one of the commodities that can be exported, therefore increasing tea plantations."
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/segoeui"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Distance"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#1E2742"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="90 x 120 cm"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="32sp"
                                android:textColor="#1E2742"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harvest"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#82B70B"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mar - Oct"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="32sp"
                                android:textColor="#82B70B"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Day"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#F1A411"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Morning"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="32sp"
                                android:textColor="#F1A411"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="16sp"
                                android:layout_marginTop="10dp"
                                android:textColor="#FB7D8A"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 yr"
                                android:fontFamily="@font/segoeuibold"
                                android:textSize="32sp"
                                android:textColor="#FB7D8A"
                                />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Information"
                            android:textSize="24sp"
                            android:fontFamily="@font/segoeuibold"
                            android:textColor="#FB7D8A"

                            />

                        <GridLayout
                            android:id="@+id/gridLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="100dp"
                            android:columnCount="2"
                            android:rowCount="2"
                            android:columnOrderPreserved="false">

                            <FrameLayout
                                android:id="@+id/cardTea"
                                android:layout_width="150dp"
                                android:layout_height="150dp"


                                android:layout_gravity="center"
                                android:background="@drawable/circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:src="@drawable/tea_herb" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1"
                                        android:layout_marginStart="24dp"
                                        android:textColor="#FB7D8A"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="24sp"
                                        android:layout_gravity="bottom|start" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tea"
                                        android:textColor="#1E2742"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="16sp"
                                        android:layout_marginEnd="20dp"
                                        android:layout_gravity="bottom|end" />
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardFertilizer"
                                android:layout_gravity="end"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:background="@drawable/circle_background">

                                <ImageView
                                    android:layout_width="120dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/fertilizer_image" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2"
                                        android:layout_marginStart="24dp"
                                        android:textColor="#FB7D8A"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="24sp"
                                        android:layout_gravity="bottom|start" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Fertilizer"
                                        android:textColor="#1E2742"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="16sp"
                                        android:layout_marginEnd="20dp"
                                        android:layout_gravity="bottom|end" />
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardPest"
                                android:layout_marginTop="30dp"
                                android:layout_width="150dp"
                                android:layout_height="150dp"


                                android:layout_gravity="center"
                                android:background="@drawable/circle_background">

                                <ImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/pest_image" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="6dp"
                                    >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="3"
                                        android:layout_marginStart="24dp"
                                        android:textColor="#FB7D8A"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="24sp"
                                        android:layout_gravity="bottom|start" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pest"
                                        android:textColor="#1E2742"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="16sp"
                                        android:layout_marginEnd="20dp"
                                        android:layout_gravity="bottom|start" />
                                </LinearLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/cardHarvest"
                                android:layout_marginTop="30dp"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="end"
                                android:background="@drawable/circle_background">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/harvest_image" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="6dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4"
                                        android:layout_marginStart="24dp"
                                        android:textColor="#FB7D8A"
                                        android:fontFamily="@font/segoeuibold"
                                        android:textSize="24sp"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Harvest"
                                        android:textColor="#1E2742"
                                        android:fontFamily="@font/segoeuibold"
                                        android:layout_marginEnd="20dp"
                                        android:textSize="16sp"/>
                                </LinearLayout>
                            </FrameLayout>
                        </GridLayout>
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>