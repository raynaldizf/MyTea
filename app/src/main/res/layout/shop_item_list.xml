<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="150dp"
    app:cardCornerRadius="16dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="20dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivProductImage"
            android:scaleType="centerCrop"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/pupuk"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pak Tani Urecode ukuran 1 Kg"
            android:textSize="19sp"
            android:fontFamily="@font/segoeuibolditalic"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:id="@+id/tvProductName"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pupuk Urecote dengan kandungan Urea + Argon untuk menghemat dosis pemakaian dan juga meningkatkan hasil tanaman anda."
            android:textSize="14sp"
            android:fontFamily="@font/segoeui"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/ivProductImage"
            android:layout_marginStart="12dp"
            android:layout_below="@id/tvProductName"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:maxLines="4"
            android:ellipsize="end"

            />
    </RelativeLayout>



</androidx.cardview.widget.CardView>