<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/custom_item_card.xml -->
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Gambar Produk di Samping Kiri -->
        <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/tea"
            android:contentDescription="Gambar Produk" />

        <!-- Deskripsi Produk dan Harga di Sebelah Kanan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:fontFamily="@font/segoeuibold"
                android:textSize="16sp"
                android:textColor="#1B2028"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga: Rp 100.000"
                android:fontFamily="@font/segoeui"
                android:textSize="14sp"
                android:textColor="#878787" />

            <!-- Floating Action Button untuk Aksi Tertentu -->
            <ImageButton
                android:id="@+id/imageButtonAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="3dp"
                android:src="@drawable/baseline_delete_24"
                android:backgroundTint="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
